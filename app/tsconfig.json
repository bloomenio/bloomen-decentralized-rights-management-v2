{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@shared/*": ["shared/*"],
      "@pages/*": ["pages/*"],
      "@core/*": ["core/*"],
      "@models/*": ["core/models/*"],
      "@config/*": ["config/*"],
      "@components/*": ["components/*"],
      "@services/*": ["providers/services/*"],
      "@stores/*": ["providers/stores/*"],
      "@api/*": ["providers/api/*"],
      "@db/*": ["providers/db/*"],
      "@shell/*": ["shell/*"],
      "@constants/*": ["core/constants/*"],
      "@i18n/*": ["assets/i18n/*"],
      "@env/*": ["environments/*"],
      "@directives/*": ["directives/*"]
    }
  }
}
